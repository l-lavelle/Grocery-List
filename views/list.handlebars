<div class="container">
  <div class="row">
    <!-- Sidebar for displaying created lists -->
    <div class="col-md-3">
      <div class="list-group">
        {{#each lists as |list|}}
          <a href="#" id="{{id}}"class="list-group-item list-group-item-action" onclick="switchList('{{id}}')">
            {{name}}
          </a>
          <button class="btn btn-sm btn-danger" type="button" onclick="deleteList('{{id}}')">Delete</button>
        {{/each}}
      </div>
    </div>

    <!-- selected list section -->
    <div class="col-md-9">
      <h1 class="my-3">{{listName}}</h1>

      <ul class="list-group">
        {{#each items}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            {{this.name}}
            <div class="input-group input-group-sm">
              <button class="btn btn-outline-secondary" type="button" onclick="decreaseQuantity('{{this.id}}')">-</button>
              <input type="text" class="form-control" value="{{this.quantity}}" id="quantity-{{this.id}}" readonly>
              <button class="btn btn-outline-secondary" type="button" onclick="increaseQuantity('{{this.id}}')">+</button>
              <button class="btn btn-danger" type="button" onclick="removeItem('{{this.id}}')">Remove</button>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

